\newcommand{\three}{
    \problemtext{
        Show that if $m$ is a positive integer greater than 1
        and
        \begin{align*}
            ac & \equiv bc \pmod{m},                                          \\
            \intertext{then}
            a  & \equiv b\ \left(\mathrm{mod}\ {\frac{m}{\gcd(c, m)}}\right).
        \end{align*}
        \hint{Use the definition $a\equiv b\pmod{m} \Leftrightarrow m\mid a-b \Leftrightarrow \exists k\in\Z\text{ s.t. }mk = a-b$.}
    }}

\newcommand{\mindbendera}{
    \problemtext{
        Prove that any $n$ satisfying the following conditions is a Carmichael number\footnote{This actually goes both ways. If $n$ is a Carmichael number, $n$ satisfies those conditions. We only prove the backward direction. This is called \emph{Korselt's Criterion}.}:
        \begin{enumerate}[i.]
            \item $n$ is odd.
            \item $n$ is squarefree. That is, each prime in $n$'s prime factorization appears only once; there are no powers of primes that divide $n$.
            \item For every prime $p$ dividing $n$, we have that $(p-1) \mid (n-1)$.
        \end{enumerate}
        \hint{By the Chinese Remainder Theorem, if $a \equiv b \pmod{p_i}$ for distinct primes
            $p_i$, then $a \equiv b \pmod{N}$, where $N$ is the product of the $p_i$'s.}
    }}

